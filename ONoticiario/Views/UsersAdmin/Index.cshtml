@model IEnumerable<IdentitySample.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>Utilizadores</h2>


<table class="table p-4" style="background-color: #15202B;">


    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center text-white" style="border-top:none;">
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td class="text-center text-white" style="border-top:none;">
                @Html.ActionLink("Editar Utilizador", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                @Html.ActionLink("Detalhes do Utilizador", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                @Html.ActionLink("Apagar Utilizador", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>
